#!/bin/sh

if [[ $# -eq 1 ]]
then
    for i in {1..4}; do
        printf "\n====================================================================================\n\n";
        ssh admin@192.168.56.10$i "$1";
    done
    printf "\n||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||\n\n"
elif [[ $# -eq 4 ]]
then
    for i in $(seq $3); do
        printf "\n====================================================================================\n\n";
        ssh admin@$1.$(($2+$i-1)) "$4";
    done
    printf "\n||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||\n\n"
fi
